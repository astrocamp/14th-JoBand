<div class="px-5 py-5 mx-auto mt-10 bg-white rounded-lg joband-shadow flex-warp theme-bg theme-text w-fit">
  <header class="block font-bold text-center">
    <h2 class="h2 joband-text-bk"><%= t("user.forgot_password") %></h2>
  </header>
  <div class="card-body">
    <div class="block mx-auto w-fit">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="my-3 field">
          <%= f.label :email, class: "font-bold joband-text-bk" %><br />
          <%= f.email_field :email, placeholder: "email@example.com", autofocus: true, autocomplete: "email", class: "input input-bordered mb-3 mt-1", required: true %>
        </div>

        <div class="my-5 form-control">
          <%= f.submit t("user.forgot_password_submit"), class: "joband-action-btn" %>
        </div>
      <% end %>
    </div>
    <div class="form-control">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>