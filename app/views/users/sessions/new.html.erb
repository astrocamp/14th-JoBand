<h2><%= t("user.login") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "email@example.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t("user.password")%><br />
    <%= f.password_field :password, placeholder: t("user.password"),autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("user.remember_me") %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("user.login") %>
  </div>
<% end %>

<%= render "users/shared/links" %>
