<h2>歡迎來到 JoBand </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "email@example.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "密碼" %>
    <% if @minimum_password_length %>
    <em>(至少 <%= @minimum_password_length %> 個字元)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "請輸入至少8個英數字元",autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認密碼" %><br />
    <%= f.password_field :password_confirmation, placeholder: "請再次確認密碼", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "成為樂團人！" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
