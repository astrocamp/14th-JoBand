<div>
    <h1>新增個人profile</h1>
</div>

<div>
    <%= form_with( model: @profile,
                   data: { turbo: false } ) do |f| %>

                
        <div>
            <%= f.label :name, "名稱" %>
            <%= f.text_field :name %>
        </div>
        <div>
            <%= f.label :phone, "電話" %>
            <%= f.phone_field :phone, placeholder: '輸入電話號碼' %>
        </div>
        <div>
            <%= f.label :location, "居住城市" %>
            <%= f.text_field :location %>
        </div>
        <div>
            <%= f.label :seniority, "樂齡" %>
            <%= f.number_field :seniority, min: 0 %>
        </div>
        <div>
            <%= f.label :content, "簡介" %>
            <%= f.text_area :content %>
        </div>
        
        <p>使用樂器 instrument </p>
        
        <%= f.fields_for :instruments do |form| %>
            <div>
                <%= form.label :vocal, "主唱" %>
                <%= form.check_box :vocal %>

                <%= form.label :guitar, "吉他" %>
                <%= form.check_box :guitar %>

                <%= form.label :bass, "貝斯" %>
                <%= form.check_box :bass %>

                <%= form.label :keyboard, "鍵盤" %>
                <%= form.check_box :keyboard %>

            <%= f.label :drum, "鼓手" %>
            <%= f.check_box :drum %>

        <%= f.submit %>
    <% end %>
</div>
