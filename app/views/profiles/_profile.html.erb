<%= link_to profile_path(profile),class:'lg:flex lg:mb-14' do %>

  <div class="lg:flex items-center w-[300px] h-auto lg:w-[1000px] lg:h-[300px] bg-[#D9D9D9] rounded-[80px] joband-shadow p-5 my-10 lg:my-5 relative ">
    <div class="mx-auto w-[150px] h-[150px] lg:w-[200px] lg:h-[200px] relative">
      <%= render "shared/avatar", model: profile  %>
    </div>

    <div class="w-full lg:w-[450px] flex flex-wrap p-5">
      <p class="w-full font-semibold text-center lg:text-left joband-text-bk h2 joband-shadow">
        <%= profile.user.name %>
      </p>
      <p class="w-full h-[70px] h4 mt-5 joband-text-bk hidden lg:block">
        <%= profile.content.truncate(45) %>
      </p>
      <p class="w-full h-[70px] h4 mt-5 joband-text-bk text-center block lg:hidden">
        <%= profile.content.truncate(25) %>
      </p>
      <div class="flex w-full justify-evenly lg:justify-start">
        <% if profile.location.present? %>
          <p class="joband-tag-location lg:mr-5">
            <%= profile.location %>
          </p>
        <% end %>
        <% if profile.seniority.present? %>
          <p class="joband-tag-style">
            <%= profile.seniority %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="mx-auto w-[100px] h-[100px] lg:w-[150px] lg:h-[150px] flex justify-center items-center">
      <%= render "/shared/instrument", instrument: profile.default_instrument(profile) %>
    </div>
  </div>
  
<% end %>