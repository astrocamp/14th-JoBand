<% if @profile.user.bands.any? %>
  <% @profile.user.bands.each do |band| %>
    <%= link_to band_path(band), action: 'go' do %>
    <div class="mx-2">
      <%= band.name %>
      <figure class="w-20 h-20 relative">
        <%= render 'shared/avatar' , model: band %>
      </figure>
    </div>
    <% end %>
  <% end %>
<% else %>
  <p>未加入樂團</p>
<% end %>