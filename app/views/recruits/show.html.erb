<article class="flex justify-center flex-wrap w-9/12 h-auto p-6 mx-auto rounded-lg shadow-md bg-slate-100 text-gray-700 ">
  
  <% @resume_lists.where(status: :pending).each do |list| %>
    <div class="m-3">
      <%= link_to resume_list_path(list), action: 'go' do %>
        <%= User.find(list.user_id).name %>
        <%= list.role %>
        <%= list.description %>
      <% end %>
    </div>
  <% end %>
  
  <div class="flex flex-col items-center">
    <h1 class="font-bold text-xl text-[#2A323A] mb-5">
      <%= @recruit.title %>
    </h1>

    <p class="my-3">徵求職位 : <br>
      <% @recruit.instruments.each do |instrument| %>
        <%= instrument.name %>
      <% end %>
    </p>

    <p class="my-3">希望條件 :<br>
      <%= @recruit.condition %>
    </p>

    <p class="my-3">練習時間 :<br>
      <%= @recruit.practice_time %>
    </p>

    <p class="my-3">地區 :
      <%= @recruit.area %>
    </p>

    <div>
      <%= link_to '更新', edit_recruit_path(@recruit), class: "mb-3 bg-[#2A323A] text-white rounded-lg p-1 text-sm" %>
      <%= link_to '刪除', recruit_path(@recruit), class: "bg-[#2A323A] text-white rounded-lg p-1 text-sm",
                        data: {
                          turbo_method: 'delete',
                          turbo_confirm: '確定刪除？'
                        } %>
    </div>

    <div class="flex flex-col mt-12">
      <% if !current_user&.band_members&.pluck(:band_id).include?(@recruit.band_id) %>
        <%= link_to "申請加入樂團", "#", class: "my-3 bg-red-500 hover:bg-red-600 text-white rounded-md p-2"%>
      <% end %>
        <%= link_to "返回社團首頁", band_path(@recruit.band), class: "bg-[#2A323A] text-white rounded-md p-2" %>
    </div>    
  </div>
  
</article>