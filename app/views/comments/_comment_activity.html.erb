<% comments.each do |comment| %>
  <li class='border-b w-full max-w-md my-2'>
    <div class='text-left joband-text-bk'>
      <%= link_to comment.user.name, profile_path(comment.user_id)%>:
    </div>
    <div class='text-left my-1 break-words'>
      <p><%= comment.content %></p>
    </div>
    <div class='text-right text-sm'>
    [<%= comment.created_at.strftime('%Y-%m-%d %H:%M') %>]
      <% if comment.user == current_user %>
      <%= link_to '刪除', comment_path(comment, activity_id: @activity.id),
                        data: {turbo_method: 'delete',
                        turbo_confirm: '確定刪除？'
                              } %>
      <% end %>
    </div>
  </li>
<% end %>
