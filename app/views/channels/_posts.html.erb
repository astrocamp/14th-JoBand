<div class="px-6 py-3 border-b" id="<%= dom_id(channel) %>">
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <%= post_avatar(channel.user.profile) %>
    </div>
    <div class="justify-between flex-auto">
      <%= link_to channel.user.name, profile_path(channel.user), class: "hover:underline font-bold", data: {turbo: false} , target: "_top"%>
      <em class="inline-block pr-10 text-xs text-end"><%= channel.created_at.strftime('%m/%d %H:%M') %></em>
    <div class="prose prose-lg"><%= channel.body %></div>
      <%= render "controls", channel: channel %>

      <div class="pl-2" data-comments-target="content" data-link-id="<%= channel.id %>" style="display: none;">
        <%= form_with(model: [channel, @comment], data: { turbo: false }) do |f| %>
          <div>
            <%= f.text_area :content, class: "joband-ring-offset rounded-xl input-bordered max-w-md w-full h-32 p-3" %>
          </div>
          <div class='mt-3 mb-2'>
            <%= f.submit '送出留言', class: 'joband-tag-location text-sm'%>
          </div>
        <% end %>
        <%= render "comments/comment_channel", comments: channel.comments, channel: channel %>
      </div>
    </div>
  </div>
</div>
