<h1>樂團列表</h1>

  <ul>
      <% @bands.each do |band| %>
      <div>
        <% if band.avatar.attached? %>
          <%= image_tag band.avatar, class: "rounded-full w-32" %>
        <% else %>
          <img src="/default_avatar.png" alt="default_avatar" class="w-32 rounded-full" >
        <% end %>
      </div>
    <li>
      <%= link_to band.name, band_path(band)  %>
      <%= render 'style', band: band %>
      <%= link_to '編輯', edit_band_path(band) %>
    </li>
  </ul>

<% end %>